# Discord Configuration
# Get these from Discord Developer Portal: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_application_id_here
DISCORD_GUILD_ID=your_discord_server_id_here
DISCORD_SUBSCRIBED_ROLE_ID=your_subscribed_role_id_here

# Optional: Slash Command Configuration
# Required for /approve-character command
DISCORD_PLAYER_ROLE_ID=your_player_role_id_here
DISCORD_ROLL_DICE_ROLE_ID=your_roll_dice_role_id_here
DISCORD_STAFF_ROLE_ID=your_staff_role_id_here

# Backend API Configuration
# API token must be at least 32 characters long
BACKEND_API_TOKEN=your_secure_backend_api_token_min_32_characters
BACKEND_API_URL=http://localhost:3000

# Checkout Configuration
CHECKOUT_URL=https://triboar.guild/checkout/

# Grace Period Configuration
GRACE_PERIOD_DAYS=7
GRACE_PERIOD_DM_ENABLED=true

# Scheduling Configuration
# Cron format: minute hour day month dayOfWeek
# Default: 59 23 * * * (11:59 PM daily)
DAILY_SYNC_SCHEDULE=59 23 * * *

# Server Configuration
PORT=3001

# Logging Configuration
# Options: trace, debug, info, warn, error
LOG_LEVEL=info

# Environment
# Options: development, production
NODE_ENV=development
